<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.Inicio"
             Title="Worktime">
    <ContentPage.Content>
    <StackLayout Margin="10">
      <Label Text="FECHA"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

      <StackLayout Orientation="Horizontal">
        <Button ImageSource="login" Text="Entrada" BackgroundColor="LightGreen" HorizontalOptions="StartAndExpand"/>
        <Button ImageSource="logout" Text="Salida" BackgroundColor="Coral" HorizontalOptions="EndAndExpand"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>