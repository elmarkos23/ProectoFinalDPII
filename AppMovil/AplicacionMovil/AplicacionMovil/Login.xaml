<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionMovil.Login"  Title="Worktime">

  <StackLayout Orientation="Vertical" Margin="10" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
    <Image Source="worktime" WidthRequest="200" Margin="0,10,0,30"/>
    <Entry x:Name="txtIdentificacion" Placeholder="Ingrese Identificación" HorizontalTextAlignment="Center" Keyboard="Numeric" />
    <Button x:Name="btnIngresar" Text="Aceptar" BackgroundColor="#4CAF50" CornerRadius="10" TextColor="White" TextTransform="None" Clicked="btnIngresar_Clicked"/>
    <Label Text="Recordar identificación" FontSize="Small"/>
    <Switch x:Name="swRecordar"/>
  </StackLayout>
</ContentPage>